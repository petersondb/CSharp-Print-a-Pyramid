using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

public class Test
{
	static void Main(string[] args)
	{
		int column = 1;
				
		for(int row = 0; row < 5; row++)
		{			
			for ( int spaces = 4 ; spaces > row ; spaces--)			
				Console.Write(" ");			
			
			for( int counterColumn = 0 ; counterColumn < column; counterColumn++)
				Console.Write("*");
			
			Console.WriteLine(); // This makes it wrap around to the beginning of the line.
			
			column += 2;
			
		}
	}
}
